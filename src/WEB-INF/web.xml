<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         version="2.4"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

    <display-name>JustJournal</display-name>

    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/jjDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>

    <filter>
        <filter-name>CayenneFilter</filter-name>
        <!--suppress WebProperties -->
        <filter-class>org.apache.cayenne.conf.WebApplicationContextFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CayenneFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>com.justjournal.core.MailServletContextListener</listener-class>
    </listener>

    <listener>
        <listener-class>com.justjournal.core.RssCacheContextListener</listener-class>
    </listener>

    <servlet>
        <display-name>Maverick Dispatcher</display-name>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.infohazard.maverick.Dispatcher</servlet-class>

        <init-param>
            <param-name>defaultRequestCharset</param-name>
            <param-value>UTF-8</param-value>
        </init-param>

        <init-param>
            <param-name>reloadCommand</param-name>
            <param-value>reload</param-value>
        </init-param>

        <!--
            This allows an extra query parameter to be added
            to any request which halts the transformation process
            after that number of steps, e.g. blah.m?maxTransforms=0
        -->
        <init-param>
            <param-name>limitTransformsParam</param-name>
            <param-value>maxTransforms</param-value>
        </init-param>

        <load-on-startup>2</load-on-startup>
    </servlet>

    <servlet>
        <display-name>Users Viewer</display-name>
        <servlet-name>users</servlet-name>
        <servlet-class>com.justjournal.Users</servlet-class>
    </servlet>

    <servlet>
        <display-name>Image Viewer</display-name>
        <servlet-name>image</servlet-name>
        <servlet-class>com.justjournal.Image</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>xml-rpc</servlet-name>
        <servlet-class>com.justjournal.ctl.XmlRpc</servlet-class>
        <init-param>
            <param-name>streamMessages</param-name>
            <param-value>1</param-value>
        </init-param>
        <init-param> <!-- Optional! Defaults to text/xml and ISO-8859-1 -->
            <param-name>contentType</param-name>
            <param-value>text/xml; charset=ISO-8859-1</param-value>
        </init-param>
        <load-on-startup>2</load-on-startup>
    </servlet>

    <servlet>
        <display-name>Journal Update</display-name>
        <servlet-name>updateJournal</servlet-name>
        <servlet-class>com.justjournal.UpdateJournal</servlet-class>
    </servlet>

    <servlet>
        <display-name>RSD</display-name>
        <servlet-name>rsd</servlet-name>
        <servlet-class>com.justjournal.ctl.Rsd</servlet-class>
    </servlet>


    <servlet>
        <display-name>JJ Login</display-name>
        <servlet-name>loginAccount</servlet-name>
        <servlet-class>com.justjournal.LoginAccount</servlet-class>
    </servlet>

    <servlet>
        <display-name>New Account</display-name>
        <servlet-name>newAccount</servlet-name>
        <servlet-class>com.justjournal.NewAccount</servlet-class>
    </servlet>

    <servlet>
        <display-name>Delete Account</display-name>
        <servlet-name>DeleteAccount</servlet-name>
        <servlet-class>com.justjournal.ctl.DeleteAccount</servlet-class>
    </servlet>

    <servlet>
        <display-name>Add Comment</display-name>
        <servlet-name>addComment</servlet-name>
        <servlet-class>com.justjournal.AddComment</servlet-class>
    </servlet>

    <servlet>
        <display-name>Add Friend</display-name>
        <servlet-name>AddFriend</servlet-name>
        <servlet-class>com.justjournal.AddFriend</servlet-class>
    </servlet>

    <servlet>
        <display-name>Remove Friend</display-name>
        <servlet-name>RemoveFriend</servlet-name>
        <servlet-class>com.justjournal.RemoveFriend</servlet-class>
    </servlet>

    <servlet>
        <display-name>Select Style Sheet Base Template</display-name>
        <servlet-name>SelectStyleSheet</servlet-name>
        <servlet-class>com.justjournal.SelectStyleSheet</servlet-class>
    </servlet>

    <servlet>
        <display-name>Update Style Sheet Override</display-name>
        <servlet-name>UpdateStyleSheetOverride</servlet-name>
        <servlet-class>com.justjournal.UpdateStyleSheetOverride</servlet-class>
    </servlet>

    <servlet>
        <display-name>Recent JJ User Blog Posts</display-name>
        <servlet-name>RecentBlogs</servlet-name>
        <servlet-class>com.justjournal.RecentBlogs</servlet-class>
    </servlet>

    <servlet>
        <display-name>Photo Album Image</display-name>
        <servlet-name>AlbumImage</servlet-name>
        <servlet-class>com.justjournal.AlbumImage</servlet-class>
    </servlet>

    <servlet>
        <display-name>Add Picture</display-name>
        <servlet-name>AddPicture</servlet-name>
        <servlet-class>com.justjournal.ctl.AddPicture</servlet-class>
    </servlet>

    <servlet>
        <display-name>Remove Picture</display-name>
        <servlet-name>DeletePicture</servlet-name>
        <servlet-class>com.justjournal.ctl.DeletePicture</servlet-class>
    </servlet>

    <servlet>
        <display-name>Journal Title</display-name>
        <servlet-name>JournalTitle</servlet-name>
        <servlet-class>com.justjournal.ctl.JournalTitle</servlet-class>
    </servlet>

    <servlet>
        <display-name>Delete Link</display-name>
        <servlet-name>DeleteLink</servlet-name>
        <servlet-class>com.justjournal.ctl.DeleteLink</servlet-class>
    </servlet>

    <servlet>
        <display-name>Biography</display-name>
        <servlet-name>Biography</servlet-name>
        <servlet-class>com.justjournal.ctl.Biography</servlet-class>
    </servlet>

    <servlet>
        <display-name>Captcha</display-name>
        <servlet-name>Captcha</servlet-name>
        <servlet-class>nl.captcha.servlet.CaptchaServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>rsd</servlet-name>
        <url-pattern>/rsd</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.h</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>users</servlet-name>
        <url-pattern>/users/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>image</servlet-name>
        <url-pattern>/image</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>xml-rpc</servlet-name>
        <url-pattern>/xml-rpc/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>updateJournal</servlet-name>
        <url-pattern>/updateJournal</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UpdateStyleSheetOverride</servlet-name>
        <url-pattern>/prefs/UpdateStyleSheetOverride</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>loginAccount</servlet-name>
        <url-pattern>/loginAccount</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>newAccount</servlet-name>
        <url-pattern>/newAccount</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DeleteAccount</servlet-name>
        <url-pattern>/DeleteAccount</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>addComment</servlet-name>
        <url-pattern>/addComment</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AddFriend</servlet-name>
        <url-pattern>/AddFriend</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RemoveFriend</servlet-name>
        <url-pattern>/RemoveFriend</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SelectStyleSheet</servlet-name>
        <url-pattern>/SelectStyleSheet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RecentBlogs</servlet-name>
        <url-pattern>/RecentBlogs</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AlbumImage</servlet-name>
        <url-pattern>/AlbumImage</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AddPicture</servlet-name>
        <url-pattern>/prefs/AddPicture</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DeletePicture</servlet-name>
        <url-pattern>/prefs/DeletePicture</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>JournalTitle</servlet-name>
        <url-pattern>/prefs/JournalTitle</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DeleteLink</servlet-name>
        <url-pattern>/link/DeleteLink</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Biography</servlet-name>
        <url-pattern>/prefs/Biography</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Captcha</servlet-name>
        <url-pattern>/Captcha.jpg</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
